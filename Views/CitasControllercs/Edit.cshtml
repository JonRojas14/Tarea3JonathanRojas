@model TareaNo._3_Jonathan_Rojas_3101.Models.Citas

@{
    ViewData["Title"] = "Editar Cita";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <div class="row">
        <div class="col-sm-12">
            <h3>Editar Cita Agendada</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-10">
            <form method="post" asp-action="Edit">

                <input type="hidden" asp-for="Id" />

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                   <label asp-for="Especialidad" class="control-label" ></label>
                   <input asp-for="Especialidad" class="form-control" readonly/>
                   <span asp-validation-for="Especialidad" class="text-danger"></span>
                </div>

                 <div class="form-group">
                   <label asp-for="Cita" class="control-label" ></label>
                   <input asp-for="Cita" class="form-control" readonly/>
                   <span asp-validation-for="Cita" class="text-danger"></span>
                </div>

                 <div class="form-group">
                   <label asp-for="Descripcion" class="control-label" ></label>
                   <input asp-for="Descripcion" class="form-control" readonly/>
                   <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>

                 <div class="form-group">
                   <label asp-for="Estado" class="control-label" ></label>
                   <input asp-for="Estado" class="form-control" value="Acudio" readonly/>
                   <span asp-validation-for="Estado" class="text-danger"></span>
                </div>

                <div>
                    <h1>Esta seguro que desea cambiar el estado de la cita para reportar que ya Acudio?</h1>
                </div>

                <div class="form-group">
                    <input type="submit" value="Editar Estado de la cita" class="btn btn-primary" />
                </div>

            </form>
        </div> 
    </div>

</div>

@section Scripts{

    @{ <partial name="_ValidationScriptsPartial" />}

}
